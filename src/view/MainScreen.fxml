<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainBorderPane" prefHeight="768.0" prefWidth="1024.0" style="-fx-border-radius: 10; -fx-background-color: #50514F;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainScreen">
    <left>
        <VBox fx:id="menuContainer" minWidth="-Infinity" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #50514F;" BorderPane.alignment="TOP_CENTER">
            <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="140.0">
               <children>
                  <Label text="Schedule" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font></Label>
               </children>
            </HBox>
                <Button fx:id="overviewButton" mnemonicParsing="false" onAction="#onOverview" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Overview" textFill="WHITE">
                    <VBox.margin>
                        <Insets left="30.0" top="50.0" />
                    </VBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
                </Button>
                <Button fx:id="appointmentsButton" mnemonicParsing="false" onAction="#onAppointments" style="-fx-background-color: transparent; -fx-opacity: 0.6; -fx-cursor: hand;" text="Appointments" textFill="WHITE">
                    <VBox.margin>
                        <Insets left="30.0" top="20.0" />
                    </VBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
                </Button>
                <Button fx:id="customersButton" layoutX="30.0" layoutY="70.0" mnemonicParsing="false" onAction="#onCustomers" style="-fx-background-color: transparent; -fx-opacity: 0.6; -fx-cursor: hand;" text="Customers" textFill="WHITE">
                    <VBox.margin>
                        <Insets left="30.0" top="20.0" />
                    </VBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
                </Button>
            </children>
        </VBox>
    </left>
   <center>
       <BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-border-radius: 10; -fx-background-color: #50514F;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
           <center>
               <VBox minHeight="400.0" minWidth="600.0" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F8FFF4;" BorderPane.alignment="CENTER">
                   <children>
                       <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="100.0" prefWidth="800.0" style="-fx-border-style: solid; -fx-border-width: 0.2; -fx-border-color: #CDCDCD; -fx-background-color: white;">
                           <children>
                               <Label text="Overview">
                                   <font>
                                       <Font name="System Bold" size="18.0" />
                                   </font>
                                   <HBox.margin>
                                       <Insets left="50.0" />
                                   </HBox.margin>
                               </Label>
                           </children>
                       </HBox>
                       <VBox prefHeight="488.0" prefWidth="800.0" style="-fx-border-color: #CDCDCD; -fx-border-style: solid; -fx-border-width: 0.2;" VBox.vgrow="ALWAYS">
                           <children>
                               <HBox prefHeight="200.0" prefWidth="800.0" spacing="20.0">
                                   <children>
                                       <VBox prefHeight="180.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-style: solid; -fx-border-width: 0.1; -fx-border-color: gray;" HBox.hgrow="ALWAYS">
                                           <children>
                                               <Pane prefHeight="40.0" prefWidth="258.0" style="-fx-background-color: #F8FFF4;">
                                                   <children>
                                                       <Label layoutY="12.0" text="Appointment within 15 minutes">
                                                           <font>
                                                               <Font name="System Bold" size="14.0" />
                                                           </font>
                                                           <padding>
                                                               <Insets left="10.0" />
                                                           </padding>
                                                       </Label>
                                                   </children></Pane>
                                               <VBox alignment="CENTER" prefHeight="148.0" prefWidth="237.0">
                                                   <children>
                                                       <HBox alignment="CENTER" prefHeight="48.0" prefWidth="237.0" VBox.vgrow="ALWAYS">
                                                           <children>
                                                               <Label fx:id="nextAppointment" text="No upcoming appointments">
                                                                   <font>
                                                                       <Font name="System Bold" size="14.0" />
                                                                   </font>
                                                                   <HBox.margin>
                                                                       <Insets left="5.0" />
                                                                   </HBox.margin>
                                                               </Label>
                                                           </children>
                                                           <VBox.margin>
                                                               <Insets />
                                                           </VBox.margin>
                                                       </HBox>
                                                   </children>
                                               </VBox>
                                           </children></VBox>
                                       <VBox layoutX="10.0" layoutY="10.0" prefHeight="164.0" prefWidth="300.0" style="-fx-background-color: white; -fx-border-style: solid; -fx-border-width: 0.1; -fx-border-color: gray;" HBox.hgrow="ALWAYS">
                                           <children>
                                               <Pane prefHeight="40.0" prefWidth="229.0" style="-fx-background-color: #F8FFF4;">
                                                   <children>
                                                       <Label layoutX="2.0" layoutY="12.0" text="Appointments for tomorrow">
                                                           <font>
                                                               <Font name="System Bold" size="14.0" />
                                                           </font>
                                                           <padding>
                                                               <Insets left="10.0" />
                                                           </padding>
                                                       </Label>
                                                   </children>
                                               </Pane>
                                               <VBox alignment="CENTER" prefHeight="149.0" prefWidth="237.0">
                                                   <children>
                                                       <Label fx:id="appointmentsTomorrow" text="0">
                                                           <font>
                                                               <Font name="System Bold" size="48.0" />
                                                           </font>
                                                       </Label>
                                                   </children>
                                               </VBox>
                                           </children></VBox>
                                       <VBox layoutX="10.0" layoutY="10.0" prefHeight="164.0" prefWidth="230.0" style="-fx-background-color: white; -fx-border-style: solid; -fx-border-width: 0.1; -fx-border-color: gray;">
                                           <children>
                                               <Pane prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #F8FFF4;" />
                                               <VBox alignment="CENTER" prefHeight="148.0" prefWidth="167.0">
                                                   <children>
                                                       <Label fx:id="addButton" onMouseClicked="#onAddButton" style="-fx-cursor: hand;" text="+">
                                                           <font>
                                                               <Font name="System Bold" size="96.0" />
                                                           </font>
                                                       </Label>
                                                   </children>
                                               </VBox>
                                           </children></VBox>
                                   </children>
                                   <VBox.margin>
                                       <Insets left="60.0" right="60.0" top="40.0" />
                                   </VBox.margin>
                               </HBox>
                               <HBox alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="800.0" spacing="20.0">
                                   <children>
                                       <Label text="Filter appointments by contact">
                                           <HBox.margin>
                                               <Insets left="70.0" />
                                           </HBox.margin>
                                           <font>
                                               <Font name="System Bold" size="14.0" />
                                           </font></Label>
                              <ComboBox fx:id="contactComboBox" onAction="#onContactCombo" prefWidth="150.0" style="-fx-cursor: hand;" />
                                   </children>
                                   <VBox.margin>
                                       <Insets top="20.0" />
                                   </VBox.margin>
                               </HBox>
                               <TableView fx:id="appointmentsPerContact" prefHeight="200.0" prefWidth="200.0" stylesheets="@../resources/styless.css" VBox.vgrow="ALWAYS">
                                   <columns>
                                       <TableColumn fx:id="appointmentID" prefWidth="75.0" text="ID" />
                                       <TableColumn fx:id="title" prefWidth="75.0" text="Title" />
                              <TableColumn fx:id="type" prefWidth="75.0" text="Type" />
                              <TableColumn fx:id="description" prefWidth="75.0" text="Description" />
                              <TableColumn fx:id="start" prefWidth="75.0" text="Start" />
                              <TableColumn fx:id="end" prefWidth="75.0" text="End" />
                              <TableColumn fx:id="customerID" prefWidth="75.0" text="Customer ID" />
                                   </columns>
                                   <VBox.margin>
                                       <Insets bottom="40.0" left="60.0" right="60.0" />
                                   </VBox.margin>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                               </TableView>
                           </children></VBox>
                   </children></VBox>
           </center>
       </BorderPane>
   </center>
</BorderPane>
