<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F8FFF4;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginForm">
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" spacing="20.0">
         <Label fx:id="signInText" alignment="CENTER" contentDisplay="CENTER" maxWidth="300.0" prefHeight="35.0" prefWidth="122.0" text="Sign in">
            <font>
               <Font name="System Bold" size="30.0" />
            </font>
         </Label>
         <Label fx:id="locationLabel" alignment="CENTER" maxWidth="300.0" text="Location">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <TextField fx:id="emailField" maxWidth="300.0" minHeight="40.0" promptText="Email" style="-fx-border-style: solid; -fx-border-radius: 5;" />
         <PasswordField fx:id="passwordField" maxHeight="0.0" maxWidth="300.0" minHeight="40.0" promptText="Password" style="-fx-border-radius: 5; -fx-border-style: solid;" />
         <Button fx:id="loginButton" minHeight="40.0" minWidth="300.0" mnemonicParsing="false" onAction="#onLoginButton" style="-fx-border-style: solid; -fx-border-radius: 5; -fx-background-color: black; -fx-cursor: hand;" text="Log in" textFill="WHITE">
            <font>
               <Font name="Arial Bold" size="18.0" />
            </font>
         </Button>
         <Label fx:id="loginError" alignment="CENTER" maxWidth="300.0" text="Incorrect username or password" textFill="RED" visible="false">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </VBox>
   </center>
</BorderPane>
